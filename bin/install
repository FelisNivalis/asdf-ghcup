#!/usr/bin/env bash
set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")
toolname=$(basename "$plugin_dir")

if [[ "${toolname}" == "cabal" ]]
then
  ghcup install "${toolname}" "${ASDF_INSTALL_VERSION}" -i "${ASDF_INSTALL_PATH}/bin"
else
  ghcup install "${toolname}" "${ASDF_INSTALL_VERSION}" -i "${ASDF_INSTALL_PATH}"
fi
